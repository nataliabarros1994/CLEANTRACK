# ============================================================================
# CleanTrack Production Environment Variables
# ============================================================================
# IMPORTANT: Copy this file to .env.production and fill with real values
# Never commit .env.production to version control!
# ============================================================================

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-production-key-here-change-this
ALLOWED_HOSTS=cleantrack.com,www.cleantrack.com,your-server-ip
DJANGO_SETTINGS_MODULE=cleantrack.settings_production

# Database (PostgreSQL)
DB_NAME=cleantrack_prod
DB_USER=cleantrack_user
DB_PASSWORD=your-strong-database-password
DB_HOST=localhost
DB_PORT=5432

# Site Configuration
SITE_URL=https://cleantrack.com
ADMIN_EMAIL=admin@cleantrack.com

# Email (Resend)
RESEND_API_KEY=re_your_production_resend_key
DEFAULT_FROM_EMAIL=noreply@cleantrack.com
SERVER_EMAIL=server@cleantrack.com

# Stripe (PRODUCTION KEYS - NOT TEST!)
STRIPE_LIVE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_TEST_SECRET_KEY=sk_test_your_test_stripe_secret_key
STRIPE_LIVE_MODE=True
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Redis Cache
REDIS_URL=redis://127.0.0.1:6379/1

# CORS (comma-separated list)
CORS_ALLOWED_ORIGINS=https://cleantrack.com,https://www.cleantrack.com

# Locale
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo
